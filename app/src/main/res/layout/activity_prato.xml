<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PratoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPrato"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image1"
            android:focusable="true"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/ivVoltarPrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvNomePrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Restaurante"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivPrato"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDescricaoPrato"
            android:text="Descrição"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/ivPrato"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>